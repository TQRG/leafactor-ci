<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cards_content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/typography_subhead"
            android:textStyle="bold"
            android:text="@+id/textTitleTextView"
            android:id="@+id/textTitleTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_padding_unit"
            android:textSize="@dimen/typography_body_1"
            android:text="@+id/textStoryTextView"
            android:id="@+id/textStoryTextView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_padding_unit"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorAccent"
                android:textSize="@dimen/typography_caption"
                android:textStyle="italic"
                android:text="@+id/textFooterTextView"
                android:id="@+id/textFooterTextView" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>