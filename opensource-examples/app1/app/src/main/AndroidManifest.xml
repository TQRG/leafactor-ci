<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.jparkie.givesmehope">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.jparkie.givesmehope.GMHApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/GMHTheme">

        <activity
            android:name="com.jparkie.givesmehope.views.activties.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
